{{#if addNewBook}}
<h1>New Book</h1>
<div>
  <form>

    <div class="form-group">
      <label for="author">Author</label> {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label> {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="pages">Pages</label> {{input value=pages id="pages"}}
    </div>

    <div class="form-group">
      <label for="price">Price</label> {{input value=price id="price"}}
    </div>


    <div class="form-group">
      <label for="image">Cover Image</label> {{input value=image id="image"}}
    </div>
    <textarea rows="4" cols="40">
      <label for="synopsis">Synopsis</label>{{input value=synopsis id="synopsis"}}
</textarea>
        <button {{action 'saveBook1'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'bookFormShow'}}>New Book</button>
{{/if}}
